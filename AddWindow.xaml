<Window x:Class="Production_Planner.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Production_Planner"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Parts">
            <DockPanel Margin="0,5,0,0">
                <Label Content="Part Name -" DockPanel.Dock="Left"/>
                <Button x:Name="btnAddPart" Width="80" DockPanel.Dock="Right">Add Part</Button>
                <TextBox x:Name="txtPartName" Width="Auto" Margin="0,0,5,0"/>
            </DockPanel>
            </GroupBox>

            <GroupBox Header="Products">
                <StackPanel Height="Auto">
                    <DockPanel Margin="0,5,0,0">
                        <Label Content="Product Name -" DockPanel.Dock="Left"/>
                        <TextBox x:Name="txtProductName" Width="Auto" Margin="0,0,5,0"/>
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Cost (RMB) -" DockPanel.Dock="Left"/>
                        <TextBox x:Name="txtProdCost" Width="682" Margin="0,0,5,0"/>
                    </DockPanel>
                    
                    <DockPanel>
                        <Label Content="Parts List -" DockPanel.Dock="Left"/>
                        <ComboBox x:Name="cbPartsList" ItemsSource="{Binding Name}" Width="657">
                        </ComboBox>
                    </DockPanel>
                    <ListBox x:Name="lbPartsList" ItemsSource="{Binding Name}" Height="200"/>

                    <Button x:Name="btnAddProduct" Width="80" DockPanel.Dock="Right">Add Product</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
