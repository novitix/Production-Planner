<Page x:Class="Production_Planner.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Production_Planner"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <StackPanel Background="#EEE">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Label Content="Quantity:" Grid.Column="0" Grid.Row="0"/>
            <TextBox x:Name="txtQty" Grid.Column="1" Grid.Row="0"/>

            <Label Content="Exchange Rate:" Grid.Column="0" Grid.Row="1"/>
            <TextBox x:Name="txtExchangeRate" Grid.Column="1" Grid.Row="1"/>
        </Grid>
    </StackPanel>
</Page>
