<Window x:Class="Production_Planner.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Production_Planner"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0">
            <Label Content="Exchange Rate: " DockPanel.Dock="Left"/>
            <TextBox x:Name="txtExRate" TextChanged="txtExRate_TextChanged"/>
        </DockPanel>
        <DockPanel Grid.Row="0" Grid.Column="1">
            <Label Content="Quantity: " DockPanel.Dock="Left"/>
            <TextBox x:Name="txtQty" TextChanged="txtQty_TextChanged"/>
        </DockPanel>
        <Button x:Name="btnGetSs" Grid.Column="0" Grid.Row="1" Click="btnGetSs_Click">Get Spreadsheet</Button>
    </Grid>
</Window>
