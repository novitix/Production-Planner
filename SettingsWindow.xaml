<Window x:Class="Production_Planner.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Production_Planner"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,5">
            <DockPanel>
                <Label Content="Spreadsheet Location" DockPanel.Dock="Left"/>
                <Button x:Name="btnChooseFolder" Content="..." Width="30" Margin="5,0" DockPanel.Dock="Right" Click="btnChooseFolder_Click"/>
                <TextBox x:Name="txtLocation" IsEnabled="False"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
